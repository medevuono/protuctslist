<div class="container">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-1">
      <h1>Productos</h1>
      <p class="text-right"> <%= link_to "Nuevo Producto", new_product_path, class: "btn btn-primary" %> </p>
      <table class="table table-striped">
        <tr>
          <th>Nombre</th>
          <th>Precio</th>
          <th>Categoria</th>
        </tr>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td>
              <%= product.categories.map(&:name).join(", ") %>
            </td>
            <td>
              <%= link_to "Editar producto", edit_product_path(product) %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>